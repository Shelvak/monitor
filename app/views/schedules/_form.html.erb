<%= simple_form_for @schedule do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, input_html: { autofocus: true } %>
    <div class="row">
      <div class="col-md-6 date-picker">
        <%= f.input :start, as: :date_picker %>
      </div>
      <div class="col-md-6 date-picker">
        <%= f.input :end, as: :date_picker %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :interval %>
      </div>
      <div class="col-md-6">
        <%= f.input :frequency, collection: frequencies, prompt: false %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :script, as: :autocomplete, url: scripts_path, input_html: {
          data: { empty_result_label: t('schedules.script.empty') }
        } %>
      </div>
      <div class="col-md-6">
        <%= f.input :server, as: :autocomplete, url: servers_path, input_html: {
          data: { empty_result_label: t('schedules.server.empty') }
        } %>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= Dependency.model_name.human count: 0 %>
        </h3>
      </div>
      <div id="dependencies" class="panel-body">
        <%= f.simple_fields_for :dependencies, dependencies do |rf| %>
          <%= render 'dependencies/dependency', f: rf %>
        <% end %>

        <%= link_to_add_fields t('schedules.new.dependency'), f, :dependencies %>
      </div>
    </div>

    <%= f.input :lock_version, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
