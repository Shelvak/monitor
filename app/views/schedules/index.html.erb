<% if @schedules.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Schedule.human_attribute_name 'script' %></th>
        <th><%= Schedule.human_attribute_name 'server' %></th>
        <th class="visible-lg"><%= Schedule.human_attribute_name 'start' %></th>
        <th class="visible-lg"><%= Schedule.human_attribute_name 'end' %></th>
        <th class="visible-lg"><%= Schedule.human_attribute_name 'interval' %></th>
        <th class="visible-lg"><%= Schedule.human_attribute_name 'frequency' %></th>
        <th colspan="3">
          <%= link_to_new new_schedule_path, class: 'btn btn-default btn-xs pull-right' %>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @schedules.each do |schedule| %>
        <tr>
          <td><%= schedule.script %></td>
          <td><%= schedule.server %></td>
          <td class="visible-lg"><%= l schedule.start, format: :short %></td>
          <td class="visible-lg"><%= l schedule.end, format: :short if schedule.end %></td>
          <td class="visible-lg"><%= schedule.interval %></td>
          <td class="visible-lg"><%= t "schedules.frequencies.#{schedule.frequency}" if schedule.frequency %></td>
          <td><%= link_to_show schedule %></td>
          <td><%= link_to_edit [:edit, schedule] %></td>
          <td><%= link_to_destroy schedule %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to_new new_schedule_path, class: 'btn btn-primary' %>
