<h1><%= @user %></h1>

<p>
  <%= mail_to @user.email %>
</p>

<p>
  <strong><%= roles_label %></strong>:
  <%= t "users.roles.#{@user.role}" %>
</p>

<% if @user.tags.any? %>
  <ul class="list-inline">
    <% @user.tags.each do |tag| %>
      <li>
        <span class="label label-<%= tag.style %>"><%= tag %></span>
      </li>
    <% end %>
  </ul>
<% end %>

<hr>

<%= link_to_edit [:edit, @user] %> |
<%= link_to_index users_path %>

<%= render 'role_help' %>
