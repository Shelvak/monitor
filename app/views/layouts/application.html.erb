<!doctype html>
<html lang="<%= locale %>">
<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <%= stylesheet_link_tag    'application', data: { turbolinks_track: 'reload' }, media: 'all' %>
  <%= javascript_include_tag 'application', data: { turbolinks_track: 'reload' } %>
  <!--[if lt IE 9]>
    <%= javascript_include_tag 'application-ie', data: { turbolinks_track: 'reload' } %>
  <![endif]-->
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>
  <div class="alert alert-warning hidden loading-caption">
    <strong><%= t 'navigation.loading' %></strong>
  </div>
  <div class="container">
    <%= render 'shared/menu' %>
    <%= render 'shared/flash' if flash_message %>
    <%= yield %>
  </div>
</body>
</html>
