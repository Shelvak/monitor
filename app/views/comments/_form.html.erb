<%= simple_form_for @comment, comment_form_options do |f| %>
  <%= f.error_notification %>

  <fieldset>
    <div class="form-inputs">
      <%= render 'comment', f: f %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn-sm btn-default' %>
      <%= link_to t('cancel'), @comment, data: { remote: request.xhr? } %>
    </div>
  </fieldset>

  <hr>
<% end %>
